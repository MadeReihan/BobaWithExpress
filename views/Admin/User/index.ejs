<%- include ../../partials/header.ejs%>
<%- include ../../partials/navbar.ejs%>

<div class="container">
    <h1 class="text-center">List User</h1>
    <a href="/users/create" class="btn btn-primary">Tambah User</a>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i<user.length; i++){ %>
            <tr>
                <th><%= i+1 %></th>
                <td><%= user[i].name %></td>
                <td><%= user[i].email%></td>
                <td><%= user[i].role%></td>
                <td>
                    <form action="/user/delete/<%=user[i]._id %>?_method=DELETE" method="POST">
                      <a href="/user/edit/<%= user[i]._id %>" class="btn btn-warning"><i class="fas fa-pencil-alt"></i>Ubah</a>
                      <button class="btn btn-danger"><i class="fas fa-trash"></i>Hapus</button>
                    </form>
                  </td>
            </tr>
            <%} %>
        </tbody>
      </table>
</div>


